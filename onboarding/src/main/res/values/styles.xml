<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AwayCardLogoDefinition" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/righteous_regular</item>
        <item name="android:textColor">@color/medium_slate_blue</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="AwayCardTextDefinition" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:textColor">@color/jet</item>
    </style>

    <style name="AwayCardTextDefinition.IntroTextDefinition">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">36sp</item>
    </style>

    <style name="AwayCardTextDefinition.IntroTitleDefinition">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/cultured</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="AwayCardTextDefinition.IntroSubTitleDefinition">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">5sp</item>
        <item name="android:textColor">@color/cultured</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="ButtonOutlineDefinition" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_outline</item>
        <item name="android:textColor">@color/cultured</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>