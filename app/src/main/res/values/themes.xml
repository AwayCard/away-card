        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/medium_slate_blue</item>
    </style>

    <style name="AwayCard.SplashTheme" parent="Theme.AwayCard">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/medium_slate_blue</item>
        <item name="android:windowBackground">@drawable/background_main_splash</item>
        <item name="android:navigationBarColor">@color/medium_slate_blue</item>
    </style>
</resources>